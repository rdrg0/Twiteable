<h2 class="heading heading--sm text-center mb-16">Edit tweet</h2>

<%= form_with model: @tweet do |form| %>
    <div class="input__container flex-col bg-white mb-16">
      <%= form.hidden_field :user_id, value: @tweet.user.id %>
      <%= form.text_area :body, placeholder: "Remember to think before you write" , class:'input__content' %>
      <%= form.submit "Update Tweet", class: 'btn btn--primary ml-auto' %>
    </div>    
<% end %>