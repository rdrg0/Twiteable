<div class="container flex-col align-center">
  <div>
    <h1>Profile</h1>
  </div>

  <div class="profile flex-col align-center">
    <%= image_tag(@user.avatar, class: "profile-avatar") %>
    <div class="heading heading--xs"> <%= @user.name %></div>
    <div class="heading-l"><%= "@" + @user.username %></div>
    <div class="heading-l"><%= "Joined on " + I18n.l(@user.created_at, format: '%B, %d de %Y') %></div>
  </div>
    <div class="btn btn--primary btn--profile btn--fit-content mt-16">
    <%= link_to 'Edit Profile', edit_user_registration_path, class:"btn--link"%>
    </div>
  </div>

  <div>
    <div>
      <h2>Tweets</h2>
      <% @user.tweets.each do |tweet|%>
        <div>
          <%if tweet.user.avatar.attached?%>
              <%=image_tag(tweet.user.avatar, class: 'imagen en circular tama単o peque単o')%>
          <% else%>
              <%= image_tag('Imageanonymus.png', class: 'imagen en circular tama単o peque単o')%>
          <% end%>
          <%= link_to tweet_path(tweet) do %>
            <div>
              <div><%= @user.username + " @" + @user.name %></div>
              <div><%= time_ago_in_words(tweet.updated_at)%></div>
            </div>
            <div>
              <p><%= tweet.body %></p>
            </div>
          <%end%>
          <div>
            <div>
              <%= link_to user_like_path(tweet), method: :delete do %>
                <%= image_tag 'Icontrash.svg' %>
              <% end %>
            </div>
            <div>
              <%= link_to edit_user_like_path(tweet), method: :patch do %>
                <%= image_tag 'Iconpencil.svg' %>
              <% end %>
            </div>
          </div>
            <div>
              <div>
                <%= link_to tweet_path(tweet) do %>
                  <%= image_tag 'Iconmessage.svg' %>
                <% end %>
                <%= tweet.replies_count || 0 %>
              </div>
              <div>
                <%= link_to tweet_likes_path(tweet), method: :post do %>
                  <% if current_user.liked_tweets.include? tweet %>
                    <%= image_tag 'Iconlikes_toggle.svg' %>
                  <% else %>
                  <%= image_tag 'Iconlikes.svg' %>
                  <%end%>
                <% end %>
                <%= tweet.likes.count || 0 %>
              </div>
            </div>
          </div>
        </div>
      <%end%>
      
      <br>
      
      <div>
        <h2><%=link_to 'Likes', user_likes_path(@user)%></h2>
      </div>
  </div>
</div>


