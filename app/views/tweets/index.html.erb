<h2 class="heading heading--sm">Home</h2>


<%= form_with model: @new_tweet do |form| %>
    <div class="input__container flex-col bg-white">
      <%= form.text_area :body, placeholder: "Remember to think before you write" , class:'input__content' %>
      <%= form.submit "Tweet", class: 'btn btn--primary ml-auto' %>
    </div>    
<% end %>

<% @tweets.each do |tweet| %>
    <div>
      <%= image_tag(tweet.user.avatar) %>
    </div>
    <div>
      <%= tweet.user.name %>
    </div>
    <div>
      <%= "@" + tweet.user.username %>
    </div>
    <div>
      <%= time_ago_in_words(tweet.created_at) + " ago"%>
    </div>
    <div>
      <%= tweet.body %>
    </div>
    <div>
      <%= tweet.replies_count %>
    </div>
    <div>
      <%= tweet.likes_count %>
    </div>
  <% end %>