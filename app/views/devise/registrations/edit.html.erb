<h2 class= "headind--m text-center">Edit Profile<%= resource_name.to_s.humanize %></h2>

<div class = "generic-container sign-in-container"> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input input--full-width">
      <%= f.label :username, class: "content--xs overline"%>
    <div class="input__container">
      <%= f.text_field :username, placeholder: "example", class: "input__content"  %>
    </div>
  </div>

  <div class="input input--full-width">
    <%= f.label :email, class: "content--xs overline" %>
    <div class="input__container">
    <%= f.email_field :email, placeholder: "john@ecample.com", class: "input__content" %>
    </div>
  </div>

  <div class="input input--full-width">
    <%= f.label :name, class: "content--xs overline" %>
    <div class="input__container">
      <%= f.text_field :name , placeholder: "Example Name", class: "input__content" %>
    </div>
  </div>

    <div class="field">
      <%= f.label :avatar, class: "content--xs overline" %><br />
      <%= image_tag current_user.avatar, class: 'imagen en circular tamaño pequeño' %>
      <%= f.file_field :avatar, class: "input__content content--xs"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="input input--full-width">
      <%= f.label :password, class: "content--xs overline" %>
      <div class="input__container">
      <%= f.password_field :password, placeholder: "********", class: "input__content" %>
      </div>
    </div>

    <div class="input input--full-width">
      <%= f.label :password_confirmation, class: "content--xs overline" %>
      <div class="input__container">
      <%= f.password_field :password_confirmation, placeholder: "********", class: "input__content" %>
      </div>
    </div>

    <div class="input input--full-width">
      <%= f.label :current_password, class: "content--xs overline" %>
      <div class="input__container">
      <%= f.password_field :current_password, placeholder: "********", class: "input__content"  %>
      </div>
    </div>

    <div class="content--xs uppercase text-center">
      <%= f.submit "Update", class: "btn btn--medium btn--primary btn--full-width mt-16" %>
    </div>
  <% end %>
  <%= link_to "Back", :back, class: "content--sm primary-500 no-link mt-16" %> %>
</div>
